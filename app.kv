BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Sort by:'
        Spinner:
            id: sort_selection_spinner
            text: app.current_selection
            # values takes a list of sorting options
            values: app.sort_options
            on_text: app.change_spinner_selection(self.text)
        Label:
            text: 'Add New Movie...'
        Label:
            text: 'Title:'
        TextInput:
            text: ''
        Label:
            text: 'Category:'
        TextInput:
            text: ''
        Label:
            text: 'Year:'
        TextInput:
            text: ''
        Button:
            text: 'Add Movie'
            id: add_button
        Button:
            text: 'Clear'
            id: clear_button
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                id: movies_to_watch_label
                text: app.movies_to_watch_text
        BoxLayout:
            orientation: 'vertical'
            # this layout is populated with Button widgets in app code
            id: entries_box
        BoxLayout:
            Label:
                id: status_label
                text: app.status_text