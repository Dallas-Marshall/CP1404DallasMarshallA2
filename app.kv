BoxLayout:
    orientation: 'horizontal'
    # Left side of GUI
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: 200
        Label:
            text: 'Sort by:'
        Spinner:
            id: sort_selection_spinner
            text: app.current_selection
            # values takes a list of sorting options
            values: app.sort_options
            on_text: app.change_spinner_selection(self.text)
        Label:
            text: 'Add New Movie...'
        Label:
            text: 'Title:'
        TextInput:
            id: new_title
            text: ''
            multiline: False
            write_tab: False
        Label:
            text: 'Category:'
        TextInput:
            id: new_category
            text: ''
            multiline: False
            write_tab: False
        Label:
            text: 'Year:'
        TextInput:
            id: new_year
            text: ''
            multiline: False
            write_tab: False
        Button:
            text: 'Add Movie'
            id: add_button
            on_press: app.handle_press_add_movie(new_title.text, new_year.text, new_category.text)
        Button:
            text: 'Clear'
            id: clear_button
            on_press: app.clear_fields()
    # Right side of GUI
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: movies_to_watch_label
            text: app.movies_to_watch_text
            size_hint_y: None
            height: 55
        BoxLayout:
            orientation: 'vertical'
            # this layout is populated with movie Button widgets in app code main.py
            id: entries_box
        Label:
            id: status_label
            text: app.status_text
            size_hint_y: None
            height: 55